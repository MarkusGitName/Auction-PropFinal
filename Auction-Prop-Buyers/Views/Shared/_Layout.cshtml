<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/assets/img/fat.png">
    <title>Auction-Prop.com</title>

    <script src="https://kit.fontawesome.com/5cb4d6169e.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/Content/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/font-awesome.css" type="text/css">

</head>
<body>

    <!-- ======= Header/Navbar ======= -->
    <nav class="navbar navbar-default navbar-trans navbar-expand-lg fixed-top">
        <div class="container-fluid">
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarDefault" aria-controls="navbarDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <a href="@Url.Action("Index", "Home")" class="navbar-brand" style="padding-left:30px">
                <img src="~/Logo/Asset 1.png" width="350" height="60" alt="Auction-Prop Logo" padding-left="20px">
            </a>
            <button type="button" class="btn btn-link nav-search navbar-toggle-box-collapse d-md-none" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-expanded="false">
                <span class="fa fa-search" aria-hidden="true"></span>
            </button>
            <div class="navbar-collapse collapse justify-content-center" id="navbarDefault">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a>@Html.ActionLink("Properties", "Properties", "Home",null, new { @class = "nav-link" })</a>
                    </li>
                    <li class="nav-item">
                        <a>@Html.ActionLink("Buyers", "Buyers", "Home",null, new { @class = "nav-link" })</a>
                    </li>
                    <li class="nav-item">
                        <a> @Html.ActionLink("Sellers", "Sellers", "Home",null, new { @class = "nav-link" })</a>
                    </li>
                    <li class="nav-item">
                        <a>@Html.ActionLink("How it works", "HowItWorks", "Home",null, new { @class = "nav-link" })</a>

                    </li>
                    <li class="nav-item">
                        <a>@Html.ActionLink("FAQ", "FAQ", "Home",null, new { @class = "nav-link" })</a>
                    </li>
                    <li class="nav-item">
                        <a>@Html.ActionLink("Contact", "Contact", "Home",null, new { @class = "nav-link" })</a>
                    </li>
                    <li>@Html.Partial("_LoginPartial")</li>
                </ul>
            </div>
            <button type="button" class="btn btn-b-n navbar-toggle-box-collapse d-none d-md-block" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-expanded="false">
                <span class="fa fa-search" aria-hidden="true"></span>
            </button>
        </div>
    </nav><!-- End Header/Navbar -->



    <div class="container-fluid">
        @RenderBody()
    </div>

    <!-- Page Footer -->
    <footer id="page-footer">
        <div class="inner">
            <aside id="footer-main">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3 col-sm-3">
                            <article>
                                <a href="#"><img src="~/Logo/Asset 1.png" width="250" height="45" alt="Auction-Prop Logo"></a>
                                <address>
                                    <br>
                                    Fintech Campus<br>
                                    81 Botterklapper Street<br>
                                    The Willows, 0083<br>
                                    Pretoria East
                                </address>
                                <a href="tel:082-316-3702" style="text-decoration: none">082 316 3702</a><br>
                                <a href="mailto:info@auction-prop.com" style="text-decoration: none">info@auction-prop.com</a>
                            </article>
                        </div><!-- /.col-sm-3 -->
                        <div class="col-md-3 col-sm-3">
                            <article>
                                <h3>Auctions</h3>
                                <ul class="list-unstyled list-links">
                                    <li><a href="#" style="text-decoration: none">Residential</a></li>
                                    <li><a href="#" style="text-decoration: none">Commercial</a></li>
                                    <li><a href="#" style="text-decoration: none">Agricultural</a></li>
                                    <li><a href="#" style="text-decoration: none">Investment</a></li>
                                    <li><a href="#" style="text-decoration: none">Bank Instruction</a></li>
                                </ul>
                            </article>
                        </div><!-- /.col-sm-3 -->
                        <div class="col-md-3 col-sm-3" style="text-decoration: none">
                            <article>
                                <h3>Useful Links</h3>
                                <ul class="list-unstyled list-links" style="text-decoration: none">
                                    <li style="text-decoration: none">@Html.ActionLink("How it works", "About", "Home")</li>
                                    <li style="text-decoration: none">@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                                    <li style="text-decoration: none">@Html.ActionLink("FAQ", "FAQ", "Home")</li>
                                    <li style="text-decoration: none">@Html.ActionLink("Privacy Policy", "Privacy", "Home")</li>
                                    <li style="text-decoration: none">@Html.ActionLink("Terms and Conditions", "Terms", "Home")</li>
                                </ul>
                            </article>
                        </div>
                        <div class="col-md-3 col-sm-3">
                            <article>
                                <h3>Email Sign Up</h3>
                                <div class="panel-body">
                                    <div class="media">
                                        <div class="media-body">
                                            <form>
                                                <div class="form-group">
                                                    <label for="newsletter-name" class="hidden">Name</label>
                                                    <input type="name" class="form-control" id="newsletter-name" placeholder="Name">
                                                </div>
                                                <div class="form-group">
                                                    <label for="newsletter-email" class="hidden">Email address</label>
                                                    <input type="email" class="form-control" id="newsletter-email" placeholder="Email">
                                                </div>
                                                <button type="submit" class="btn btn-b">Submit</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                       
                            </article>
                        </div>
                    </div>
                </div>
            </aside><!-- /#footer-main -->
            <aside id="footer-thumbnails" class="footer-thumbnails"></aside><!-- /#footer-thumbnails -->
            <aside id="footer-copyright">
                <div class="container">
                    <span>All Rights Reserved Auction-Prop. Copyright © 2020.</span>
                </div>
            </aside>
        </div><!-- /.inner -->
        <!-- end Page Footer -->
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

    @RenderSection("JavaScript", required: false)

</body>
</html>