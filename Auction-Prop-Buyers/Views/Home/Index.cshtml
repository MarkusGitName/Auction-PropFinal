                                        </p>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <img src="~/assets/img/night.jpg" />
            </div>
        </div>
    </div>

    <!-- ======= Latest Properties Section Start ======= -->
    <section class="section-property section-t8">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="title-wrap d-flex justify-content-between">
                        <div class="title-box">
                            <h2 class="title-a">Upcoming Auctions</h2>
                        </div>
                        <div class="title-link">
                            <a>
                                @Html.ActionLink("All Properties", "Properties", "home", new { @class = "nav-link" }, null)
                                <span class="ion-ios-arrow-forward"></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div id="property-carousel" class="owl-carousel owl-theme">
                @{

                    ICollection<Property> propertiesList = APILibrary.APIMethods.APIGetALL<ICollection<Property>>("Properties");

                    foreach (Property prop in propertiesList)
                    {
                        if (prop.Auction != null)
                        {
                            <div class="carousel-item-b">
                                <div class="card-box-a card-shadow">

                                    <div class="img-box-a" style="min-height:460px" href=@Html.ActionLink("","Detailss", "home", new { id = prop.PropertyID })>
                                        <img src=@prop.PropertyPhotos.First().PropertyPhotoPath alt="" class="img-a img-fluid">
                                    </div>
                                    <div class="card-overlay">
                                        <div class="card-overlay-a-content">
                                            <div class="card-header-a">
                                                <h2 class="card-title-a">
                                                    <a href='@Url.Action("Detailss", "home", new { id = prop.PropertyID })'>
                                                        @prop.Address
                                                        <br /> @prop.City, @prop.Province
                                                    </a>
                                                </h2>
                                            </div>
                                            <div class="card-body-a">
                                                <div class="price-box d-flex">
                                                    <span class="price-a">Auction Date | @prop.Auction.StartTime</span>
                                                </div>
                                                <a href='@Url.Action("Detailss", "home", new { id = prop.PropertyID })' class="link-a">
                                                    Learn More
                                                    <span class="ion-ios-arrow-forward"></span>
                                                </a>
                                            </div>
                                            <div class="card-footer-a">
                                                <ul class="card-info d-flex justify-content-around">
                                                    <li>
                                                        <h4 class="card-info-title">Building</h4>
                                                        <span>
                                                            @prop.FloorSize
                                                            <sup>2</sup>
                                                        </span>
                                                    </li>
                                                    <li>
                                                        <h4 class="card-info-title">Beds</h4>
                                                        <span>@prop.BedRooms</span>
                                                    </li>
                                                    <li>
                                                        <h4 class="card-info-title">Baths</h4>
                                                        <span>@prop.BathRooms</span>
                                                    </li>
                                                    <li>
                                                        <h4 class="card-info-title">Garages</h4>
                                                        <span>@prop.Garages</span>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }


                    }

                }


            </div>
        </div>
    </section>
    <!-- ======= Latest Properties Section End ======= -->
    <!-- ======= Services Section Start ======= -->
